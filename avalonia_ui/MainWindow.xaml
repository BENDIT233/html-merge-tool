<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="HtmlMergeTool.AvaloniaUI.MainWindow"
        Title="HTML 合并工具" Height="500" Width="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="HTML 合并工具" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="将文件夹内的多个HTML文件合并为一个单一的、完整的网页" FontSize="14" Foreground="#6c757d"/>
        </StackPanel>

        <!-- 输入设置 -->
        <Border Grid.Row="1" BorderBrush="#adb5bd" BorderThickness="1" CornerRadius="5" Margin="0,0,0,15">
            <StackPanel Margin="15">
                <TextBlock Text="输入设置" FontSize="16" FontWeight="Medium" Margin="0,0,0,10"/>

                <!-- 拖拽区域 -->
                <Border BorderBrush="#adb5bd" BorderThickness="2" BorderDashArray="5,3" CornerRadius="5" Height="100" Margin="0,0,0,15"
                        Background="#f8f9fa" Padding="10">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="📂" FontSize="36" HorizontalAlignment="Center"/>
                        <TextBlock Text="拖拽文件夹到此处或点击下方按钮选择" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- 文件夹路径 -->
                <StackPanel Orientation="Horizontal">
                    <TextBox Width="*" Margin="0,0,10,0" Watermark="请选择输入文件夹"/>
                    <Button Content="浏览文件夹" Width="100"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 输出设置 -->
        <Border Grid.Row="2" BorderBrush="#adb5bd" BorderThickness="1" CornerRadius="5" Margin="0,0,0,15">
            <StackPanel Margin="15">
                <TextBlock Text="输出设置" FontSize="16" FontWeight="Medium" Margin="0,0,0,10"/>

                <!-- 输出格式 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="输出格式:" Width="80" VerticalAlignment="Center"/>
                    <ComboBox Width="120">
                        <ComboBoxItem Content="HTML"/>
                        <ComboBoxItem Content="MHTML"/>
                    </ComboBox>
                </StackPanel>

                <!-- 输出目录 -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="输出目录:" Width="80" VerticalAlignment="Center"/>
                    <TextBox Width="*" Margin="0,0,10,0" Watermark="请选择输出目录"/>
                    <Button Content="浏览" Width="80"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 进度条 -->
        <ProgressBar Grid.Row="3" Margin="0,0,0,15" IsVisible="False"/>

        <!-- 转换按钮 -->
        <Button Grid.Row="4" Content="开始转换" FontSize="16" Height="40" Background="#0d6efd" Foreground="White"/>
    </Grid>
</Window>